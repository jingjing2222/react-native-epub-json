{
  "name": "@react-native-epub-builder/core",
  "version": "0.1.0",
  "description": "React Native EPUB viewer components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublishOnly": "yarn build",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "react-native-server-driven-epub": "workspace:*"
  },
  "devDependencies": {
    "react": "18.3.1",
    "react-native": "0.77.0",
    "tsdown": "^0.13.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "epub",
    "react-native",
    "viewer",
    "ebook",
    "reader"
  ],
  "license": "MIT"
}
