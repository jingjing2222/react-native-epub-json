{
  "name": "react-native-server-driven-epub",
  "collaborators": [
    "gudwjd1208@koreatech.ac.kr"
  ],
  "description": "Convert EPUB files to React Native server-driven UI components with WASM-powered parsing",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jingjing2222/react-native-server-driven-epub"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "scripts": {
    "build": "tsdown && cp src/lib/*.wasm dist/",
    "prepublishOnly": "pnpm build",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsdown": "^0.13.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "epub",
    "react-native",
    "server-driven",
    "converter",
    "ebook",
    "parser",
    "wasm",
    "ui"
  ]
}
